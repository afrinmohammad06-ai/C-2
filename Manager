#include <iostream>
using namespace std;

// Base Class
class Employee
{
protected:
    int empId;
    string name;
    float basicSalary;
    float totalSalary;

public:
    void getEmployeeDetails()
    {
        cout << "Enter Employee ID: ";
        cin >> empId;
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Basic Salary: ";
        cin >> basicSalary;
    }

    virtual void calculateSalary()
    {
        totalSalary = basicSalary;   // Basic salary only
    }

    void displayEmployeeDetails()
    {
        cout << "\nEmployee Details" << endl;
        cout << "ID: " << empId << endl;
        cout << "Name: " << name << endl;
        cout << "Basic Salary: " << basicSalary << endl;
        cout << "Total Salary: " << totalSalary << endl;
    }
};

// Derived Class
class Manager : public Employee
{
private:
    float allowance;

public:
    void getManagerDetails()
    {
        cout << "Enter Manager Allowance: ";
        cin >> allowance;
    }

    void calculateSalary()
    {
        totalSalary = basicSalary + allowance;
    }

    void displayManagerDetails()
    {
        displayEmployeeDetails();
    }
};

int main()
{
    Manager m;   // One Manager object

    m.getEmployeeDetails();
    m.getManagerDetails();
    m.calculateSalary();
    m.displayManagerDetails();

    return 0;
}
